<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Kanto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La regione di Kanto"
                android:textSize="30dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:id="@+id/titolo">
            </TextView>

            <FrameLayout
                android:id="@+id/verde"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@id/titolo"
                android:background="#4CBB17"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/rosso"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@id/verde"
                android:background="#FF0000"
                android:layout_marginTop="17dp"
                android:layout_marginStart="3dp">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/blu"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@id/rosso"
                android:background="#1F51FF"
                android:layout_marginTop="17dp"
                android:layout_marginStart="3dp">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/giallo"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@id/blu"
                android:background="#FDDA0D"
                android:layout_marginTop="17dp"
                android:layout_marginStart="3dp">
            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/mappaKanto"
                android:layout_below="@id/titolo"
                android:src="@drawable/kanto"
                android:layout_marginTop="-50dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I pokÃ¨mon della regione"
                android:textSize="30dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:id="@+id/secondoTitolo"
                android:layout_below="@id/mappaKanto"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contenitore"
                android:orientation="vertical"
                android:layout_below="@id/secondoTitolo">
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>