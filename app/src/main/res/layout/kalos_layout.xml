<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Kalos">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La regione di Kalos"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginStart="2dp"
        android:id="@+id/titolo">
    </TextView>

    <FrameLayout
        android:id="@+id/x"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/titolo"
        android:background="#1434A4"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/y"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/x"
        android:background="#DC143C"
        android:layout_marginTop="17dp"
        android:layout_marginStart="3dp">
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/mappaKalos"
        android:layout_below="@id/titolo"
        android:src="@drawable/kalos"
        android:layout_marginTop="-50dp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I pokÃ¨mon di VI generazione"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_marginStart="2dp"
        android:id="@+id/secondoTitolo"
        android:layout_below="@id/mappaKalos"
        android:layout_marginTop="-55dp">
    </TextView>

</RelativeLayout>