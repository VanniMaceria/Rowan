<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconaRicercaFallita"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ricerca_fallita_icon"
        android:layout_centerInParent="true">
    </ImageView>

    <TextView
        android:id="@+id/testo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non è presente nessun pokèmon con quel nome nel sistema"
        android:textColor="#788280"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/iconaRicercaFallita"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginHorizontal="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sicuro di averlo scritto bene o che si tratti di un pokèmon?"
        android:textColor="#788280"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iconaRicercaFallita"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp">
    </TextView>



</RelativeLayout>